<UserHomeView@MDRelativeLayout>:
    BoxLayout:
        orientation: "vertical"
        Widget:
            size_hint_y: None
            height: dp(70)

        MDFloatLayout:
            size_hint: .6, .6
            pos_hint: {"center_x": .5, "center_y": .5}
            MDCard:
                size_hint: .5, .5
                spacing: dp(20)
                padding: dp(10)
                pos_hint: {"center_x": .5, "center_y": .5}
                orientation: "vertical"
                elevation: 4
                shadow_offset: (0, 1)
                md_bg_color : CardBackgroundColor
                MDLabel:
                    text : 'Door Status'
                    font_style : 'H6'
                    halign : "center"
                    size_hint: .7, .2
                    pos_hint: {"center_x": .5, "center_y": .5}

                MDSeparator:

                MDLabel:
                    id: user_door_status
                    md_bg_color: "F44336" #if user_door_status.text == "open" else app.theme_cls.primary_dark # "D32F2F"
                    text : "open"
                    bold: True
                    font_style : 'H6'
                    halign : "center"
                    size_hint: .5, .6
                    pos_hint: {"center_x": .5, "center_y": .5}

                MDSeparator:

                MDFloatLayout:
                    MDRaisedButton:
                        id: open_button
                        text: "Open door"
                        on_release: print("Send open command, args= user_door_number")
                        pos_hint: {"center_x": .5, "center_y": .5}
