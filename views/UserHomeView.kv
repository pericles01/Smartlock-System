<UserHomeView>:
    BoxLayout:
        orientation: "vertical"
        Widget:
            size_hint_y: None
            height: dp(70)

        MDFloatLayout:
            size_hint: .6, .6
            pos_hint: {"center_x": .5, "center_y": .5}
            MDCard:
                size_hint: .5, .5
                spacing: dp(20)
                padding: dp(10)
                pos_hint: {"center_x": .5, "center_y": .5}
                orientation: "vertical"
                elevation: 4
                shadow_offset: (0, 1)
                md_bg_color : CardBackgroundColor

                MDFloatLayout:
                    MDLabel:
                        text : 'Door Status'
                        font_style : 'H6'
                        halign : "center"
                        size_hint_x: .7
                        pos_hint: {"center_x": .5, "center_y": .5}

                MDSeparator:

                MDFloatLayout:
                    MDLabel:
                        id: user_door_status
                        md_bg_color: "9CCC65" if user_door_status.text == "open" else "F44336"
                        bold: True
                        font_style : 'H6'
                        halign : "center"
                        size_hint_x: .6
                        pos_hint: {"center_x": .5, "center_y": .5}

                MDSeparator:

                MDFloatLayout:
                    MDRaisedButton:
                        id: open_button
                        text: "Open door"
                        on_release: root.open_user_door()
                        pos_hint: {"center_x": .5, "center_y": .5}
