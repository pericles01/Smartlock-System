#: import GlobalComponents views.GlobalComponents

<ClickableTextFieldRound@MDRelativeLayout>:
    size_hint_y: None
    height: password_field.height
    MDTextField:
        id: password_field
        hint_text : "password"
        max_text_length: 10
        multiline: False
        mode: "round"
        password : True
        icon_left: "key-variant"
        size_hint_x : None
        width : 220
        pos_hint : {"center_x":.5}

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_x": .8,"center_y": .5}
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            password_field.password = False if password_field.password is True else True

<CardLabel@MDLabel>:
    text : 'LOGIN'
    font_style : 'Button'
    font_size : 45
    halign : "center"
    size_hint_y : None
    height : self.texture_size[1]
    padding_y : 15

<CoverImage@CoverBehavior+AsyncImage>:
    fit_mode: "contain"

<ImageCard@FloatLayout>:
    size_hint_x : .7
    pos_hint : {"center_x":.5, "center_y":.5}
    md_bg_color: app.theme_cls.primary_dark
    CoverImage:
        source: root.monkey_hello

        size_hint : None, None
        size : 50, 50 #self.texture_size
        padding_y : 5

<LoginAdminCard>:
    size_hint : None,None
    size : 320,450
    pos_hint : {"center_x":.5,"center_y":.5}
    elevation : 5
    md_bg_color : [35/255,49/255,48/255,1]
    padding : 20
    spacing : 30
    orientation : "vertical"

    CardLabel:

    MDTextField :
        id: username_field
        hint_text : "username"
        max_text_length: 10
        multiline: False
        mode: "round"
        icon_left : "account"
        size_hint_x : None
        width : 220
        font_size : 20
        pos_hint : {"center_x":.5}

    ClickableTextFieldRound:
        id: password_widget

    MDFillRoundFlatIconButton:
        text : 'SIGN-UP'
        pos_hint : {"center_x":.5}
        font_size : 15
        on_release: root.login(app.manager)

    Widget:
        size_hint_y : None
        height : dp(20)


<LoginAdminView@FloatLayout>:
    VBoxLayout:
        ReturnToolbar:
            size_hint_y: None
            height: dp(30)
            title: "LOGIN ADMIN"
        MDFloatLayout:
            LoginAdminCard:

