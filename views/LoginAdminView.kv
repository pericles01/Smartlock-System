#: import GlobalComponents views.GlobalComponents


<CardLabel@MDLabel>:
    text : 'LOGIN'
    font_style : 'Button'
    font_size : 45
    halign : "center"
    size_hint_y : None
    height : self.texture_size[1]
    pos_hint : {"center_x":.5, "center_y":.5}
    padding : dp(15)

<LoginAdminCard>:
    size_hint : None,None
    size : 320,450
    pos_hint : {"center_x":.5,"center_y":.5}
    elevation : 5
    md_bg_color : CardBackgroundColor
    padding : 20
    spacing : 30
    orientation : "vertical"

    AsyncImage:
        fit_mode: "fill"
        pos_hint : {"center_x":.5, "center_y":.5}
        source: root.login_image
        size_hint : .9, .9

    MDTextField :
        id: username_field
        hint_text : "username *"
        max_text_length: 10
        multiline: False
        mode: "round"
        icon_left : "account"
        size_hint_x : None
        width : 220
        font_size : 20
        pos_hint : {"center_x":.5}

    MDRelativeLayout:
        pos_hint : {"center_x":.5,"center_y":.5}
        size_hint_x: .9
        ClickableTextFieldRound:
            id: password_widget

    MDFillRoundFlatIconButton:
        text : 'SIGN-UP'
        pos_hint : {"center_x":.5}
        font_size : 15
        on_release: root.login(app.manager)

    MDLabel:
        id: error_label
        text: "* required fields"
        halign: "center"
        size_hint_y : None
        height : dp(20)
        theme_text_color: "Error"
        font_style: "Subtitle2"


<LoginAdminView@FloatLayout>:
    VBoxLayout:
        ReturnToolbar:
            size_hint_y: None
            height: dp(30)
            title: "LOGIN ADMIN"
        MDFloatLayout:
            LoginAdminCard:

