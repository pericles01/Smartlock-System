#: import GlobalComponents views.GlobalComponents

<ClickableTextFieldRound@MDFloatLayout>:
    size_hint_y: None
    height: text_field.height
    MDTextField:
        id: text_field
        hint_text : "password"
        max_text_length: 10
        multiline: False
        mode: "round"
        password : True
        icon_left: "key-variant"
        size_hint_x : None
        width : 220
        pos_hint : {"center_x":.5}

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_x": .8,"center_y": .5}
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True

<CoverImage@CoverBehavior+Image>:
    #reference_size: self.texture_size

<LoginAdminCard>:
    id: admin_card
    size_hint : None,None
    size : 320,450
    pos_hint : {"center_x":.5,"center_y":.5}
    elevation : 5
    md_bg_color : [35/255,49/255,48/255,1]
    padding : 20
    spacing : 30
    orientation : "vertical"

    MDRelativeLayout:
        size_hint_x : .7
        pos_hint : {"center_x":.5, "center_y":.5}
        md_bg_color: app.theme_cls.primary_dark
        CoverImage:
            source: root.monkey_hello

            size_hint : None, None
            size : 50, 50 #self.texture_size
            padding_y : 5

    MDTextField :
        hint_text : "username"
        max_text_length: 10
        multiline: False
        mode: "round"
        icon_right : "account"
        size_hint_x : None
        width : 220
        font_size : 20
        pos_hint : {"center_x":.5}

    ClickableTextFieldRound:

    MDFillRoundFlatIconButton:
        text : 'SIGN-UP'
        pos_hint : {"center_x":.5}
        font_size : 15
        on_release: print(self.text)

    Widget:
        size_hint_y : None
        height : dp(20)


<LoginAdminView@FloatLayout>:
    VBoxLayout:
        Toolbar:
            size_hint_y: None
            height: dp(30)
        MDFloatLayout:
            LoginAdminCard:

<B@MDTextField>:
    hint_text : "password"
    max_text_length: 10
    multiline: False
    mode: "round"
    icon_right : "eye-off"
    icon_left: "key-variant"
    size_hint_x : None
    width : 220
    font_size : 20
    pos_hint : {"center_x":.5}
    color_active : [1,1,1,1]
    password : True