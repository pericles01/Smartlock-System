#: import GlobalComponents views.GlobalComponents

<MembershipConfirmationContent>
    MDCard:
        pos_hint : {"center_x":.5,"center_y":.5}
        md_bg_color : CardBackgroundColor
        orientation : "vertical"
        spacing: dp(10)
        padding: dp(10)
        MDLabel:
            id: label
            text : ""
            font_style : 'H5'
            halign : "center"
            #size_hint_y: .5
            pos_hint: {"center_x": .5, "center_y": .5}

        MDSeparator:

        MDGridLayout:
            pos_hint: {"center_x": .5, "center_y": .5}
            #size_hint_y: .3
            cols: 2
            spacing: dp(15)

            MDRelativeLayout:
                MDFillRoundFlatIconButton:
                    id: yes_button
                    text: "Yes"
                    icon: "check"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_press: root.go2membership(app.manager)

            MDRelativeLayout:
                MDFillRoundFlatIconButton:
                    id: no_button
                    text: "No"
                    icon: "exit-to-app"
                    pos_hint: {"center_x": .5, "center_y": .5}


<PinDialogContent>:
    MDCard:
        pos_hint : {"center_x":.5,"center_y":.5}
        md_bg_color : CardBackgroundColor
        spacing: dp(10)
        padding: dp(10)
        orientation : "vertical"

        MDRelativeLayout:
            size_hint_x: .6
            pos_hint: {"center_x": .5, "center_y": .5}
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)
                MDLabel:
                    text : 'Please enter your PIN'
                    font_style : 'H6'
                    halign : "center"
                    pos_hint: {"center_x": .5, "center_y": .5}
                ClickableTextFieldRound:
                    id: user_pin_login

        MDSeparator:

        MDGridLayout:
            pos_hint: {"center_x": .5, "center_y": .5}
            cols: 2
            spacing: dp(15)
            size_hint_y: .4

            MDRelativeLayout:
                MDFillRoundFlatIconButton:
                    id: login_button
                    text: "Login"
                    icon: "account"
                    pos_hint: {"center_x": .5, "center_y": .5}

            MDRelativeLayout:
                MDFillRoundFlatIconButton:
                    id: exit_button
                    text: "Exit"
                    icon: "exit-to-app"
                    pos_hint: {"center_x": .5, "center_y": .5}

        MDLabel:
            id: error_label
            font_style : 'Subtitle2'
            halign : "center"
            size_hint_y: None
            height: dp(15)
            pos_hint: {"center_x": .5, "center_y": .5}
            theme_text_color: "Error"


<LoginOptionCard>:
    padding: dp(5), dp(5), dp(5), dp(15)
    size_hint: .8, .8
    pos_hint: {"center_x": .5, "center_y": .5}
    orientation: "vertical"
    md_bg_color : CardBackgroundColor
    elevation: 3
    focus_behavior: True
    focus_color: app.theme_cls.primary_light
    unfocus_color: CardBackgroundColor
    shadow_offset: (0, 1)

    MDIconButton:
        id: icon_button
        icon: root.icon_name
        icon_size: "60sp"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: 1, .6
        on_press: root.press_callback(root)

    MDLabel:
        text: root.text_option
        size: self.texture_size
        adaptive_size: True
        color: "2196F3" #Blue
        pos_hint: {"center_x": .5, "center_y": .5}
        bold: True

<WelcomeScreen>:
    BoxLayout:
        orientation: "vertical"
        AnchorLayout:
            size_hint_y: .2
            anchor_x: "right"
            anchor_y: "top"
            padding: dp(15)

            MDFillRoundFlatIconButton:
                #md_bg_color: app.theme_cls.primary_dark #"4FC3F7"
                icon: "login"
                text: "Login Admin"
                on_press: app.manager.push("login_admin")

        BoxLayout:
            size_hint_y: .2
            Label:
                text: "Welcome!"
                size: self.texture_size
                pos_hint_x: .5
                font_size: dp(30)
                bold: True

        GridLayout:
            rows: 2
            cols: 2
            padding: dp(50), dp(20), dp(50), dp(50),

            MDFloatLayout:
                LoginOptionCard:
                    id: rfid_login
                    icon_name: "account-card"
                    text_option: "Login with RFID"
                    press_callback: root.show_dialog

            MDFloatLayout:
                LoginOptionCard:
                    id: pin_login
                    icon_name: "numeric"
                    text_option: "Login with PIN"
                    press_callback: root.show_dialog

            MDFloatLayout:
                LoginOptionCard:
                    id: qrcode_login
                    icon_name: "qrcode-scan"
                    text_option: "Login with QR Code"
                    press_callback: root.show_dialog

            MDFloatLayout:
                LoginOptionCard:
                    id: face_recon_login
                    icon_name: "face-recognition"
                    text_option: "Login with Face Recognition"
                    press_callback: root.show_dialog