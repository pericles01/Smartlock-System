#: import GlobalComponents views.GlobalComponents


<OkDialogContent>:
    padding: dp(20)
    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        orientation: "vertical"
        spacing: dp(20)
        MDRelativeLayout:
            size_hint_y: .8
            MDLabel:
                id: text_label
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": .5}
                font_style: "H6"
        MDRelativeLayout:
            MDRaisedButton:
                id: ok_button
                md_bg_color: app.theme_cls.primary_dark
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "OK"
                #on_press: root.dismiss()


<SetupView>:
    BoxLayout:
        orientation: "vertical"
        Widget:
            size_hint_y: None
            height: dp(70)
        BoxLayout:
            padding: dp(15)
            BoxLayout:
                orientation: "vertical"
                padding: dp(5)
                spacing: dp(10)
                MDFloatLayout:
                    MDCard:
                        size_hint: .8, .8
                        padding: dp(20)
                        spacing: dp(20)
                        pos_hint: {"center_x": .5, "center_y": .5}
                        orientation: "vertical"
                        elevation: 4
                        shadow_offset: (0, 1)
                        md_bg_color : CardBackgroundColor

                        MDGridLayout:
                            cols:2
                            #padding: dp(5)

                            MDLabel:
                                text : 'Connected lockers'
                                font_style : 'H6'
                                halign : "center"
                                #size_hint: .7, .5
                                pos_hint: {"center_x": .5, "center_y": .5}

                            MDLabel:
                                id: locker_number_label
                                md_bg_color: app.theme_cls.primary_dark
                                text : str(app.connected_doors) if app.connected_doors else "10"
                                bold: True
                                font_style : 'H6'
                                halign : "center"
                                #size_hint: .5, .5
                                pos_hint: {"center_x": .5, "center_y": .5}

                        MDSeparator:

                        MDRaisedButton:
                            text: "Open all doors"
                            size_hint_y: .5
                            pos_hint: {"center_x": .5, "center_y": .5}
                            on_release: root.open_all_doors()

                MDFloatLayout:
                    MDCard:
                        size_hint: .8, .8
                        padding: dp(20)
                        spacing: dp(20)
                        pos_hint: {"center_x": .5, "center_y": .5}
                        orientation: "vertical"
                        elevation: 4
                        shadow_offset: (0, 1)
                        md_bg_color : CardBackgroundColor
                        MDLabel:
                            text : 'Enter the start number'
                            font_style : 'H6'
                            halign : "center"
                            size_hint: .9, .5
                            pos_hint: {"center_x": .5, "center_y": .5}

                        MDSeparator:

                        MDGridLayout:
                            size_hint_y: .4
                            cols: 2
                            spacing: dp(10)
                            MDTextField:
                                id: start_number_field
                                hint_text : "start number"
                                multiline: False
                                mode: "round"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                size_hint_x : .7
                                text: ""
                            MDRaisedButton:
                                text: "Enter"
                                on_release: root.show_ok_dialog()


            MDLabel:
                id: technician_label
                text: "Technician text"
                halign: "center"
                md_bg_color: [35/255,49/255,48/255,1]
                size_hint_y: .6
                pos_hint: {"center_x": .5, "center_y": .5}
                font_style : 'H6'




